{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Content Blocker",
    "description": "This extension blocks sites",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Content Blocker"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ]
}